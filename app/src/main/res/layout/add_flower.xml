<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProduct">


    <RelativeLayout
        android:id="@+id/productbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="AnanthayaMart"
            android:textSize="20sp"
            android:gravity="center"
            android:textAlignment="center">

        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarcart"
            android:src="@drawable/carttoolbar"
            android:layout_marginStart="350dp"
            android:layout_marginTop="10dp">

        </ImageView>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarperson"
            android:src="@drawable/toolbarperson"
            android:layout_marginStart="300dp"
            android:layout_marginTop="10dp">

        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home"
            android:src="@drawable/home_24"
            android:layout_marginEnd="1dp"
            android:layout_marginTop="10dp">

        </ImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search2"
            android:src="@drawable/search_24"
            android:layout_marginStart="50dp"

            android:layout_marginTop="10dp">

        </ImageView>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/productbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD PRODUCT"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:textSize="26sp"
                android:textStyle="bold"/>


            <ImageView

                android:layout_width="350dp"
                android:layout_height="200dp"
                android:id="@+id/add_imagef"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:src="@drawable/blackcam"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/product_namef"
                android:inputType="textImeMultiLine"
                android:layout_below="@+id/add_imagef"
                android:layout_marginTop="40dp"
                android:padding="20dp"
                android:hint="Product Name.."
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/box2"/>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/product_Descriptionf"
                android:layout_below="@+id/product_namef"
                android:inputType="textImeMultiLine"
                android:layout_marginTop="6dp"
                android:padding="20dp"
                android:hint="Product Description.."
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/box2"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_Descriptionf"
                android:id="@+id/product_Pricef"
                android:inputType="textImeMultiLine"
                android:layout_marginTop="6dp"
                android:padding="20dp"
                android:hint="Product Price.."
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/box2"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/add_buttonf"
                android:layout_below="@+id/product_Pricef"
                android:text="Add"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:padding="17dp"
                android:layout_marginTop="40dp"
                android:textSize="18sp"
                android:layout_marginBottom="40dp"
                android:background="@color/themeColor"
                android:textColor="@color/black"
                android:textAllCaps="true"/>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>