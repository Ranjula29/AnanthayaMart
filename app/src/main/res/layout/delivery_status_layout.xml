<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_marginTop="30dp"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp"
    app:cardElevation="15dp"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/box">


        <TextView
            android:id="@+id/delivery_productname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prouduct Name"
            android:textSize="22sp"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:textColor="@color/black"/>


        <ImageView
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:src="@drawable/line"
          android:layout_marginStart="105dp"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="1dp"
           android:layout_below="@id/delivery_productname"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Code:"
            android:textStyle="bold"
            android:layout_below="@id/delivery_productname"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/delivery_orderid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Id"
            android:layout_below="@id/delivery_productname"
            android:layout_marginTop="7dp"
            android:layout_marginStart="140dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"/>



        <TextView
            android:id="@+id/delivery_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_below="@id/delivery_orderid"
            android:layout_marginTop="7dp"
            android:layout_marginStart="140dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"/>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Address:"
            android:textStyle="bold"
            android:layout_below="@id/delivery_orderid"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/delivery_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="phone number"
            android:layout_below="@id/delivery_address"
            android:layout_marginTop="7dp"
            android:layout_marginStart="140dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Number:"
            android:textStyle="bold"
            android:layout_below="@id/delivery_address"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/delivery_quty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:layout_below="@id/delivery_phone"
            android:layout_marginTop="7dp"
            android:layout_marginStart="140dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity:"
            android:textStyle="bold"
            android:layout_below="@id/delivery_phone"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"/>



        <TextView
            android:id="@+id/delivery_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="note"
            android:layout_below="@id/delivery_quty"
            android:layout_marginTop="7dp"
            android:layout_marginStart="140dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Note:"
            android:textStyle="bold"
            android:layout_below="@id/delivery_quty"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"/>



        <TextView
            android:id="@+id/delivery_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textStyle="bold"
            android:layout_below="@id/delivery_note"
            android:layout_marginTop="7dp"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/green"/>




        <Button
            android:id="@+id/orderupdate"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textColor="@color/black"
            android:text="Edit"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="200dp"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            android:background="@color/green"
            android:layout_below="@id/delivery_amount"/>



        <Button
            android:id="@+id/orderremove"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textColor="@color/black"
            android:text="Remove"
            android:layout_marginStart="200dp"
            android:layout_marginEnd="50dp"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            android:background="@color/red"
            android:layout_below="@id/delivery_amount"
            android:layout_marginBottom="10dp"


            />


















    </RelativeLayout>






</androidx.cardview.widget.CardView>