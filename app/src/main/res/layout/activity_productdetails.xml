<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductdetailsActivity">




        <RelativeLayout
            android:id="@+id/productbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="AnanthayaMart"
                android:textSize="20sp"
                android:gravity="center"
                android:textAlignment="center">

            </TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbarcart"
                android:src="@drawable/carttoolbar"
                android:layout_marginStart="350dp"
                android:layout_marginTop="10dp">

            </ImageView>



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbarperson"
                android:src="@drawable/toolbarperson"
                android:layout_marginStart="250dp"
                android:layout_marginTop="10dp">

            </ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/home"
                android:src="@drawable/home_24"
                android:layout_marginEnd="380dp"
                android:layout_marginTop="10dp">

            </ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/search2"
                android:src="@drawable/search_24"
                android:layout_marginEnd="280dp"
                android:layout_marginTop="10dp">

            </ImageView>




        </RelativeLayout>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/productbar">

    <RelativeLayout
        android:id="@+id/es"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:id="@+id/productdetailimage"
           >

        </ImageView>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/productname1"
            android:text="Product Name"
            android:textSize="40sp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_below="@id/productdetailimage"
            >

        </TextView>

        <ImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/line"
            android:layout_below="@id/productname1"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp">

        </ImageView>

        <TextView
            android:id="@+id/pricedetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rs. 0.00"
            android:textSize="35sp"
            android:textColor="@color/themeColor"
            android:layout_below="@id/line"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textdes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="24sp"
            android:layout_below="@id/pricedetails"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="duhsihnifncsijncjsnfndjndjsnnjdsnfdsnnfnsj"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/detailsdescription"
            android:layout_below="@+id/textdes"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/detailsdescription"
            android:layout_marginTop="20dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Add To Cart"
                android:layout_marginStart="5dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:background="@color/green"

                />



        </LinearLayout>
    </RelativeLayout>
</ScrollView>

    </RelativeLayout>



