<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliveryStatusActivity">


    <RelativeLayout
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bartitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AnanthayaMart"
            android:textColor="@color/black"
            android:textSize="20sp"

            android:textAlignment="center"
            android:textStyle="bold">

        </TextView>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarcart"
            android:src="@drawable/carttoolbar"
            android:layout_marginStart="350dp"
            android:layout_marginTop="2dp"
            android:foregroundGravity="center">

        </ImageView>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarhome"
            android:src="@drawable/home_24"
            android:layout_marginEnd="270dp"
            android:layout_marginTop="2dp"
            android:foregroundGravity="center">

        </ImageView>




        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarback"
            android:src="@drawable/back"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="360dp">

        </ImageView>




        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarperson"
            android:src="@drawable/toolbarperson"
            android:layout_marginStart="250dp"
            >

        </ImageView>





    </RelativeLayout>
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/ordermanage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ORDER MANAGE"
        android:textSize="28sp"
        android:textAlignment="center"
        android:layout_below="@id/tool"
        android:textStyle="bold"
        android:textColor="@color/black"/>



    <androidx.recyclerview.widget.RecyclerView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_menu3"
        android:layout_below="@+id/ordermanage"
        android:scrollbars="vertical"
        >

    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>